<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.LocationFragment">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingTop="60dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imgPlace"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_place_purple_24dp" />

        <ImageView
            android:id="@+id/imgCall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/ic_call_purple_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32 Adelaide Tambo Dr, Durban North, Durban, 4051, South Africa"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:layout_toEndOf="@id/imgPlace"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="+27 31 564 7682"
            android:layout_toEndOf="@id/imgCall"
            android:layout_marginTop="105dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>